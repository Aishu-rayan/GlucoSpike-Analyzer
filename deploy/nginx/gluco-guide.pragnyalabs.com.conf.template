server {
    listen 80;
    listen [::]:80;
    server_name gluco-guide.pragnyalabs.com;

    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name gluco-guide.pragnyalabs.com;

    ssl_certificate /etc/letsencrypt/live/gluco-guide.pragnyalabs.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/gluco-guide.pragnyalabs.com/privkey.pem;

    root /var/www/glucoguide;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8002;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
